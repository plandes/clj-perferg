<?xml version="1.0" encoding="UTF-8"?>

<configuration status="off">
    <appenders>
        <console name="console" target="SYSTEM_OUT">
            <patternLayout pattern="perferg: %c{1}: %m%n"/>
        </console>
    </appenders>
    <loggers>
        <logger name="zensols.erg" level="info"/>
        <root level="warn">
            <appenderRef ref="console"/>
        </root>
    </loggers>
</configuration>
